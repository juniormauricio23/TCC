<Manager>:
    Menu:
        name: 'menu'
        id: menu
    Menu2:
        name: 'menu2'
        id: menu2
    Game:
        name: 'game'
        id: game
    Curiosidades:
        name: 'curiosidades'
        id: curiosidades


<Menu>:
    FloatLayout:
        canvas:
            Rectangle:
                size: (1024,768)
                pos: self.pos
                source: 'img/menu_sem_botao.png'
        orientation:'vertical'
        #padding: '20dp','50dp'
        #spacing: '15dp'
        #Widget:

        Button:
            id:tt
            #border: 90,90,90,90
            size_hint: 0.239, 0.130 #(largura,altura)
            pos: 90,350
            #center_x: root.center_x - self.width
            #center_y: root.center_y - 100
            background_normal: 'botoes/botao_modo_descobertas.png'
            background_onpass: 'botoes/botao_modo_descobertas_verde.png'
            background_down: 'botoes/botao_modo_descobertas_verde.png'
            on_release:
                #root.manager.transition.direction = 'left'
                #root.manager.current = 'game'
                root.load_imagens()
        Button:
            id:t
            #border: 90,90,90,90
            size_hint: 0.239, 0.130 #(largura,altura)
            pos: 682,350
            #center_x: root.center_x - self.width
            #center_y: root.center_y - 100
            background_normal: 'botoes/botao_modo_curiosidades.png'
            background_onpass: 'botoes/botao_modo_curiosidades_verde.png'
            background_down: 'botoes/botao_modo_curiosidades_verde.png'
            on_release:
                root.manager.transition.direction = 'left'
                root.manager.current = 'menu2'
                #root.load_imagens()


